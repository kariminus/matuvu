{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <div class="pagination">

        {% if previous is defined %}
                <span class="previous"><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">Précédent</a></span>
            {% else %}
                <span class="previous">Précédent</span>
        {% endif %}

        {% if next is defined %}
                <span class="next"><a href="{{ path(route, query|merge({(pageParameterName): next})) }}">Suivant</a></span>
            {% else %}
                <span class="next">Suivant</span>
        {% endif %}
    </div>
{% endif %}
