{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <p>{{ app.user.firstName }}</p>
        <p>{{ app.user.lastName }}</p>
    </div>
    {% block link %}
        {% if is_granted('ROLE_ADMIN') %}
            <div><a href="{{ path('admin_users') }}">Gestion des membres</a></div>
        {% elseif is_granted('ROLE_PRO') %}
            <div>
                <a href="{{ path('user_pending') }}">Propositions en attente</a>
            </div>
        {% endif %}
        <div>
            <a href="{{ path('user_edit') }}">Modifier mon profil</a>
        </div>
    {% endblock %}

    {% block content %}{% endblock %}

    <div><a href="{{ path('security_logout') }}">Se d√©connecter</a></div>
{% endblock %}