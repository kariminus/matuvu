{% extends 'PlatformBundle::layout.html.twig' %}
{% block title %}
    <p>Détail de l'observation</p>
{% endblock %}

{% block link %}
    <a href="{{ path('user_observations') }}">Accéder aux propositions</a>
{% endblock %}

{% block content %}
    <div>
        <p>{{ oiseau.scientificName }}</p>
        <p>{{ oiseau.name }}</p>
        <p>({{ oiseau.ordre }}, {{ observation.oiseau.family }})</p>
        <p>Observé le {{ observation.date | date("d/m/Y")}}</p>
        <p>lat: {{ observation.latitude }}</p>
        <p>long: {{ observation.longitude }}</p>
    </div>
    {% if is_granted('ROLE_PRO') %}
        {% include 'PlatformBundle::validation.html.twig' with {'id': observation} %}
    {% endif %}
    <div>
        <p><a href="">Précédent</a></p>
        <p><a href="">Suivant</a></p>
    </div>

{% endblock %}