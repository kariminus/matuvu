{% extends 'PlatformBundle::layout.html.twig' %}
{% block content %}
    <div class="center col-md-12">{% if is_granted('ROLE_ADMIN') %}
            <img alt="admin" src="{{ asset('images/profils/admin.png') }}"/>
        {% elseif is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {% if is_granted('ROLE_PRO') %}
                <img src="{{ asset('/images/profils/naturaliste.png') }}" alt="Image du profil naturaliste"/>
            {% elseif is_granted('ROLE_PAR') %}
                {% if app.user.observationsNumber < 10 %}
                    <img src="{{ asset('/images/profils/particulier1.png') }}" alt="Image du profil particulier"/>
                {% elseif app.user.observationsNumber >= 10 and app.user.observationsNumber < 50 %}
                    <img src="{{ asset('/images/profils/particulier2.png') }}" alt="Image du profil particulier"/>
                {% else %}
                    <img src="{{ asset('/images/profils/particulier3.png') }}" alt="Image du profil particulier"/>
                {% endif %}
            {% endif %}
        {% endif %}</div>

    <div class="col-md-12">
        {% if is_granted('ROLE_ADMIN') == false %}
            <div class="center"><p>Nombre d'observations :</p></div>
            <div class="center"><a href="{{ path('user_observations') }}"><p>{{ observations | length }}</p></a></div>
        {% endif %}
    </div>
{% endblock %}