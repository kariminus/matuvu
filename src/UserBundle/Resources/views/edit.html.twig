{% extends 'PlatformBundle::layout.html.twig' %}
{% block title %}
    <p>Gestion des membres</p>
{% endblock %}
{% block link %}
    <a href="{{ path('admin') }}">Gestion des membres</a>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_row(form.firstname) }}
        {{ form_errors(form.firstname) }}
    </div>

    <div class="form-group">
        {{ form_row(form.lastname) }}
        {{ form_errors(form.lastname) }}
    </div>

    <div class="form-group">
        {{ form_row(form.email) }}
        {{ form_errors(form.email) }}
    </div>


    <div class="form-group">
        {{ form_row(form.plainPassword, {
            'label' : false,
            'required': false,
            'attr': {'placeholder': 'Mot de passe'}
        }) }}
        {{ form_errors(form.plainPassword) }}
    </div>

    <div class="form-group">
        {{ form_row(form.postalCode) }}
        {{ form_errors(form.postalCode) }}
    </div>


    <div class="form-group">
        {{ form_row(form.roles) }}
        {{ form_errors(form.roles) }}
    </div>


    <button type="submit">Modifier</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_user_delete', { 'id': user.id }) }}">Supprimer le membre</a>
    <div>
        {% if userBefore != null %}
            <a href="{{ path('admin_user_edit', { 'id': userBefore.id }) }}">Membre précédent</a>
        {% endif %}
        {% if userNext != null %}
            <a href="{{ path('admin_user_edit', { 'id': userNext.id }) }}">Membre suivant</a>
        {% endif %}
    </div>
{% endblock %}