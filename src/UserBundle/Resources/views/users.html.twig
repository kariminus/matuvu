{% extends 'PlatformBundle::layout.html.twig' %}
{% block title %}
    <p>Gestion des membres</p>
{% endblock %}
{% block link %}
    <a href="{{ path('admin') }}">Gestion des membres</a>
{% endblock %}

{% block content %}
    <ul>
        {% for user in users %}
            <li><a href="{{ path('admin_user_edit', {'id' : user.id}) }}">{{ user.firstname }} {{ user.lastname }}</a></li>
        {% endfor %}
    </ul>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
    <a href="{{ path('admin_user_add') }}">Ajouter un membre</a>
{% endblock %}